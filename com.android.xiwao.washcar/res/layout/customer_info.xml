<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/background">
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@android:color/white" >

        <Button
            android:id="@+id/backbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/backbt" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/orange"
            android:textSize="20sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0.1dip"
            android:layout_alignParentBottom="true"
            android:background="@color/orange" />
    </RelativeLayout>

    <RelativeLayout android:id="@+id/head_img"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="@color/white"
	    android:paddingLeft="10dp"
	    >
	    <TextView android:id="@+id/head_title"
	        android:layout_height="wrap_content"
	        android:layout_width="100dp"
	        android:textColor="@android:color/black"
	        android:text="@string/head"
	        android:layout_centerVertical="true"/>
	    <ImageView android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:src="@drawable/people_icon"
	        android:textColor="@android:color/black"
	        android:layout_toRightOf="@+id/head_title"
	        android:layout_centerVertical="true"/>
	</RelativeLayout>
	<RelativeLayout android:id="@+id/name"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="@color/white"
	    android:layout_marginTop="0.1dp"
	    android:paddingLeft="10dp"
	    android:visibility="gone"
	    >
	    <TextView android:id="@+id/name_title"
	        android:layout_height="wrap_content"
	        android:layout_width="100dp"
	        android:textColor="@android:color/black"
	        android:text="@string/name"
	        android:layout_centerVertical="true"/>
	    <TextView android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:textColor="@android:color/black"
	        android:layout_toRightOf="@+id/name_title"
	        android:layout_centerVertical="true"/>
	</RelativeLayout>
	<RelativeLayout android:id="@+id/user"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="@color/white"
	    android:layout_marginTop="0.1dp"
	    android:paddingLeft="10dp"
	    >
	    <TextView android:id="@+id/user_name"
	        android:layout_height="wrap_content"
	        android:layout_width="100dp"
	        android:textColor="@android:color/black"
	        android:text="@string/user_name"
	        android:layout_centerVertical="true"/>
	    <EditText android:id="@+id/user_name_txt"
	        android:layout_height="wrap_content"
	        android:layout_width="fill_parent"
	        android:textColor="@android:color/black"
	        android:layout_toRightOf="@+id/user_name"
	        android:layout_centerVertical="true"
	        android:background="@null"
	        android:focusable="false"
	        android:textSize="12sp"
	        />
	</RelativeLayout>
	<RelativeLayout android:id="@+id/email"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="@color/white"
	    android:layout_marginTop="0.1dp"
	    android:paddingLeft="10dp"
	    >
	    <TextView android:id="@+id/my_email"
	        android:layout_height="wrap_content"
	        android:layout_width="100dp"
	        android:textColor="@android:color/black"
	        android:text="@string/email"
	        android:layout_centerVertical="true"/>
	    <EditText android:id="@+id/email_txt"
	        android:layout_height="wrap_content"
	        android:layout_width="fill_parent"
	        android:src="@drawable/car_info_off"
	        android:textColor="@android:color/black"
	        android:layout_toRightOf="@+id/my_email"
	        android:layout_centerVertical="true"
	        android:background="@null"
	        android:focusable="false"
	        android:textSize="12sp"/>
	</RelativeLayout>
	<RelativeLayout android:id="@+id/phone"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="@color/white"
	    android:layout_marginTop="0.1dp"
	    android:paddingLeft="10dp"
	    >
	    <TextView android:id="@+id/my_phone"
	        android:layout_height="wrap_content"
	        android:layout_width="100dp"
	        android:textColor="@android:color/black"
	        android:text="@string/my_phone"
	        android:layout_centerVertical="true"/>
	    <TextView android:id="@+id/phone_txt"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:textColor="@android:color/black"
	        android:layout_toRightOf="@+id/my_phone"
	        android:layout_centerVertical="true"
	        android:textSize="12sp"/>
	</RelativeLayout>
	
	<Button android:id="@+id/modify_btn"
	    android:layout_width="200dp"
	    android:layout_height="wrap_content"
	    android:text="修改"
	    android:layout_gravity="center_horizontal"
	    android:layout_marginTop="30dp"/>
</LinearLayout>