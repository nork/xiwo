<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_300dp"
    android:layout_height="@dimen/_70dp"
    android:background="@drawable/xu_line_box"
    android:orientation="horizontal" >
    <RelativeLayout
        android:id="@+id/item_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/car_list_item_bg" >
		
        <ImageView
            android:id="@+id/car_img"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:src="@drawable/icon_car"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/car_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/car_img"
            android:visibility="visible" >

            <TextView
                android:id="@+id/car_num_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/car_num"
                android:textColor="@android:color/black"
                android:visibility="gone" />

            <TextView
                android:id="@+id/car_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/car_num_title"
                android:text="沪A9K293"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/car_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/car_num"
                android:layout_marginTop="10dp"
                android:text="银都西路申北三路97号"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/order_manage_on"
            android:textColor="@color/orange"
            android:textSize="18sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/add_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/add_car"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/edit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/order_manage_on"
            android:textColor="@color/orange"
            android:textSize="18sp"
            android:visibility="gone"
             />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_right_wash"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/orange" 
        >

        <TextView
            android:id="@+id/item_right_txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="洗车"
            android:textColor="@color/blur_bg" />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/item_right_delete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/right_bg" >

        <TextView
            android:id="@+id/item_right_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/blur_bg" />
   </RelativeLayout>

</LinearLayout>
