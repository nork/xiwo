<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@android:color/white" >

        <Button
            android:id="@+id/backbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/backbt" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="充值"
            android:textColor="@color/orange"
            android:textSize="20sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0.1dip"
            android:layout_alignParentBottom="true"
            android:background="@color/orange" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="20dp" >

        <ImageView
            android:id="@+id/custom_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/people_icon" />

        <TextView
            android:id="@+id/nick_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/custom_img"
            android:paddingLeft="20dp"
            android:text="昵称"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/custom_img"
            android:paddingLeft="20dp"
            android:text="13699423263"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/amt_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/custom_img"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/custom_img"
            android:paddingLeft="20dp"
            android:text="账户金额：0.00元"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/remind_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp"
        android:text="本次充值金额：500元     单次服务可享受9折"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="gone" />

    <ListView
        android:id="@+id/recharge_server_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15dp"
        android:layout_marginRight="@dimen/_15dp" 
        android:layout_marginTop="@dimen/_40dp"/>

    <TextView
        android:id="@+id/explain_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20dp"
        android:layout_marginRight="@dimen/_20dp"
        android:layout_marginTop="@dimen/_80dp"
        android:text="账户充值，有利您下次服务时，直接从账户付费，既可享受折扣，也可快速下单。"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

</LinearLayout>