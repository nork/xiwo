<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/car_list_item_bg"
    android:layout_marginTop="20dp"
    >

    <ImageView
        android:id="@+id/car_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_car" 
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:visibility="visible"/>

    <RelativeLayout
        android:id="@+id/car_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/car_img"
        android:layout_centerVertical="true"
        android:visibility="visible"
        >

        <TextView
            android:id="@+id/car_num_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/car_num"
            android:textColor="@android:color/black" />
        
        <TextView
            android:id="@+id/wash_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_marginLeft="5dp"
            android:background="@drawable/wash_icon"
            android:layout_toRightOf="@+id/car_num_title" />
        <TextView
            android:id="@+id/wax_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/wash_button" 
            android:background="@drawable/wax_icon"/>
        
        <TextView
            android:id="@+id/car_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="沪A9K293"
            android:textColor="@android:color/black"
            android:layout_below="@+id/car_num_title" />
        
        <TextView
            android:id="@+id/car_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="银都西路申北三路97号"
            android:layout_below="@+id/car_num"
             />
    </RelativeLayout>

    <TextView
        android:id="@+id/money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥49"
        android:textColor="@color/orange"
        android:textSize="18sp"
        android:layout_centerVertical="true" 
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:visibility="visible"/>
    
    <TextView android:id="@+id/add_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_centerInParent="true"
        android:text="@string/add_car"
        android:visibility="gone"/>

</RelativeLayout>