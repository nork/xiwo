<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.xiwao.washcar"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar">
        <activity
            android:name="com.android.xiwao.washcar.ui.LoginActivity"
            android:label="@string/title_activity_main" 
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.android.xiwao.washcar.ui.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"></activity>
        
        <activity android:name="com.android.xiwao.washcar.ui.RegisterActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"></activity>
        
        <activity android:name="com.android.xiwao.washcar.ui.ResetPasswordActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"></activity>
        
        <activity android:name="com.android.xiwao.washcar.ui.FindPasswordActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"></activity>
        
        <activity android:name="com.android.xiwao.washcar.ui.CustomInfoActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"></activity>
        
        <activity android:name="com.android.xiwao.washcar.ui.OrderDetailActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"></activity>
        
        <activity android:name="com.android.xiwao.washcar.ui.PayDialog"
            android:label="@string/app_name"
            android:theme="@style/activtydialog"
            android:screenOrientation="portrait"></activity>
        
        <activity android:name="com.android.xiwao.washcar.ui.RegisterSucDialog"
            android:label="@string/app_name"
            android:theme="@style/activtydialog"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>